<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
       x:Class="Splitt.Views.SplitCheckItemView"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:vm="clr-namespace:Splitt.ViewModels"
       xmlns:wrappers="clr-namespace:Splitt.ViewModels.Wrappers"
       x:DataType="vm:SplitCheckItemViewModel">

       <ContentPage.BindingContext>
              <vm:SplitCheckItemViewModel/>
       </ContentPage.BindingContext>

       <ScrollView>
              <VerticalStackLayout Padding="20">

                     <Label Margin="0,2,0,10"
                            Text="{Binding CheckId, StringFormat='Check ID: {0}'}"
                            FontSize="18"
                            FontAttributes="Bold"
                            TextColor="Black"/>

                     <Label Margin="0,0,0,4"
                            Text="Check Members"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="Black"
                            HorizontalOptions="Center"/>
                     <BoxView HeightRequest="1"
                              Color="Gray"
                              HorizontalOptions="Fill"
                              Margin="0,4,0,8"/>

                     <Border Stroke="Gray"
                             StrokeThickness="1"
                             StrokeShape="RoundRectangle 8"
                             Padding="10">
                            <VerticalStackLayout Spacing="10">
                                   <Label Text="Name"
                                          Margin="0,10,0,0"/>
                                   <Entry Margin="0,2,0,0"
                                          Text="{Binding MemberName}"/>
                                   <Button Text="Add Member"
                                           Command="{Binding AddCheckMemberCommand}"
                                           HorizontalOptions="Center"
                                           Margin="0,4,0,4"/>
                            </VerticalStackLayout>
                     </Border>

                     <CollectionView ItemsSource="{Binding CheckMembers}"
                                     ItemsLayout="VerticalGrid, 3"
                                     Margin="0,8,0,8">
                            <CollectionView.ItemTemplate>
                                   <DataTemplate x:DataType="vm:CheckMemberWrapper">
                                          <Border Stroke="Gray"
                                                  StrokeThickness="1"
                                                  StrokeShape="RoundRectangle 12"
                                                  Padding="5"
                                                  Margin="5">
                                                 <VerticalStackLayout Spacing="0">
                                                        <Button Text="{Binding Name}"
                                                                HorizontalOptions="Center"
                                                                VerticalOptions="Center"
                                                                BackgroundColor="Transparent"
                                                                TextColor="Black"
                                                                FontSize="14"
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SplitCheckItemViewModel}}, Path=DeleteCheckMemberCommand}"
                                                                CommandParameter="{Binding .}"/>
                                                        <Label Text="{Binding AmountOwed, StringFormat='${0}'}"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               FontSize="12"
                                                               Margin="0,5,0,0"/>
                                                 </VerticalStackLayout>
                                          </Border>
                                   </DataTemplate>
                            </CollectionView.ItemTemplate>
                     </CollectionView>

                     <Label Margin="0,12,0,4"
                            Text="Check Items"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="Black"
                            HorizontalOptions="Center"/>
                     <BoxView HeightRequest="1"
                              Color="Gray"
                              HorizontalOptions="Fill"
                              Margin="0,4,0,8"/>
                     <CollectionView ItemsSource="{Binding CheckItemWrapper}">
                            <CollectionView.ItemTemplate>
                                   <DataTemplate x:DataType="wrappers:CheckItemWrapper">
                                          <Border Stroke="Gray"
                                                  StrokeThickness="1"
                                                  StrokeShape="RoundRectangle 8"
                                                  Padding="10"
                                                  Margin="0,8">
                                                 <VerticalStackLayout>
                                                        <!-- CheckItem Info -->
                                                        <Label Text="{Binding Item.Name}"
                                                               FontAttributes="Bold"/>
                                                        <Label Text="{Binding Item.UnitPrice, StringFormat='Unit Price: {0}'}"/>
                                                        <Label Text="{Binding Item.TotalPrice, StringFormat='Total Price: {0}'}"/>

                                                        <!-- Nested CollectionView -->
                                                        <Label Text="Assign to Members:"
                                                               Margin="0,10,0,0"
                                                               HorizontalOptions="Center"/>
                                                        <BoxView HeightRequest="1"
                                                                 Color="Gray"
                                                                 HorizontalOptions="Fill"
                                                                 Margin="0,4,0,10"/>
                                                        <CollectionView ItemsSource="{Binding AvailableMembers}"
                                                                        ItemsLayout="VerticalGrid, 3"
                                                                        SelectionMode="Multiple"
                                                                        SelectionChanged="OnMemberSelectionChanged">
                                                               <CollectionView.ItemTemplate>
                                                                      <DataTemplate x:DataType="vm:CheckMemberWrapper">
                                                                             <Border Stroke="DarkGray"
                                                                                     StrokeThickness="1"
                                                                                     StrokeShape="RoundRectangle 25"
                                                                                     Margin="5">
                                                                                    <Label Text="{Binding Name}"
                                                                                           Padding="5"
                                                                                           HorizontalOptions="Center"/>
                                                                             </Border>
                                                                      </DataTemplate>
                                                               </CollectionView.ItemTemplate>
                                                        </CollectionView>
                                                 </VerticalStackLayout>
                                          </Border>
                                   </DataTemplate>
                            </CollectionView.ItemTemplate>
                     </CollectionView>
                     <Button Text="Assign"
                             Margin="0,10,0,0"
                             Command="{Binding AssignItemToMemberCommand}"/>

              </VerticalStackLayout>
       </ScrollView>
</ContentPage>