<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Splitt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Splitt"
    xmlns:views="clr-namespace:Splitt.Views"
    xmlns:models="clr-namespace:Splitt.Models"
    Title="Splitt">

    <TabBar>
        <Tab Title="Home">
            <Tab.Icon>
                <FontImageSource FontFamily="FontAwesomeSolid"
                                 Glyph="{x:Static models:FaIcons.House}"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="Split">
            <Tab.Icon>
                <FontImageSource FontFamily="FontAwesomeSolid"
                                 Glyph="{x:Static models:FaIcons.MoneyCheck}"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:ManageCheckView}"/>
        </Tab>
    </TabBar>
</Shell>
