<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Splitt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Splitt"
    xmlns:views="clr-namespace:Splitt.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Splitt">

    <ShellContent
        Title="CheckSplit"
        ContentTemplate="{DataTemplate views:CheckSplitView}"
        Route="CheckSplitView" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />


</Shell>
